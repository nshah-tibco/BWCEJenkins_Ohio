{
    "family": "launch-test-app1",
    "containerDefinitions": [
        {
            "image": "750037626691.dkr.ecr.ap-northeast-1.amazonaws.com/bwce-app:latest",
            "name": "bwce-test-app",
            "cpu": 10,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080
                }
            ],
            "environment": [
                {
                    "name": "BW_LOGLEVEL",
                    "value": "DEBUG"
                },
				{
					"name":"BW_JAVA_OPTS",
					"value":"-Dbwce.aws.metering.bundle.frequency.minute=1"
				}
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "bwce-app-log",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "bwce"
                }
	    }
        }
    ]
}
